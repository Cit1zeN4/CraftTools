<UserControl x:Class="CraftTools.Views.ProfitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:CraftTools.ViewModels"
             xmlns:local="clr-namespace:CraftTools.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <viewModel:ProfitViewModel x:Key="_profitVM"/>
    </UserControl.Resources>
    <Grid
        x:Name="ProfitViewMainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <ListBox
            HorizontalContentAlignment="Stretch" 
            DataContext="{StaticResource _profitVM}" 
            ItemsSource="{Binding Profits}" 
            Background="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid 
                        Background="{DynamicResource PrimaryHueMidBrush}" 
                        Margin="0 5 5 5" Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Margin="10 0 0 5" VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="0" Text="{Binding Name}"/>
                        <TextBlock Foreground="White" Margin="10 5 0 0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0" Text="{Binding Description}"/>
                        <TextBlock Foreground="White" Margin="0 0 10 5" Grid.Row="1" Grid.Column="1" Text="{Binding Price}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
